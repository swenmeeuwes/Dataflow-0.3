<Window x:Class="MilitaryEvaluationSystem.Windows.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilitaryEvaluationSystem.Windows"
        mc:Ignorable="d"
        Title="Serial Port Connection" Height="175" Width="350">
    <Grid>
        <Label x:Name="label" Content="Select the port with which you want to connent:" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="115,62,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="popupOK" Content="OK" HorizontalAlignment="Left" Margin="167,114,0,0" VerticalAlignment="Top" Width="75" Click="popupOK_Click"/>
        <Button x:Name="popupCancel" Content="Cancel" HorizontalAlignment="Left" Margin="257,114,0,0" VerticalAlignment="Top" Width="75" Click="popupCancel_Click"/>

    </Grid>
</Window>
